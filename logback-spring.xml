<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_DIR" value="./log/" />
    <property name="LOG_FILE" value="${LOG_DIR}mapping-service"/>

    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
            <totalSizeCap>20GB</totalSizeCap>
            <!-- 7 days to keep -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d %p %c{1} [%t] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="Console"
        class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
          <pattern>%gray(%d{YYYY-MM-dd HH:mm:ss.SSS}) %green(%highlight(%5p)) - %gray([%10thread]) %cyan(%42logger{42}) : %msg%n</pattern> 
        </layout>
    </appender>

    <appender name="NEPAppender"
        class="edu.kit.datamanager.metastore2.monitoring.nep.NepAppender">
        <nepServiceUrl>https://be.nffa.eu/api/v2/monitoring/access/removethis</nepServiceUrl>
        <virtualServiceId>mapping-service</virtualServiceId>
    </appender>
    
    <!-- _____________________________________________________________________________ -->
    <!-- LOG everything at INFO level  -->
    <!-- _____________________________________________________________________________ -->
    <root level="info">
        <appender-ref ref="rollingFile" />
    </root> 
   
    <!-- _____________________________________________________________________________ -->
    <!-- Add logger for monitoring 4 NEP -->
    <!-- _____________________________________________________________________________ -->
   <logger name="edu.kit.datamanager.metastore2.monitoring.nep" level="trace">
        <appender-ref ref="Console" />
    </logger>
    <!-- _____________________________________________________________________________ -->
    <!-- Debug monitoring -->
    <!-- _____________________________________________________________________________ -->
   <logger name="edu.kit.datamanager.clients" level="trace">
    </logger>
    
    <!-- LOG "edu.kit.datamanager.metastore2.filter" at TRACE level 
         no additivity to avoid log to other locations.-->
    <logger name="edu.kit.datamanager.mappingservice.filter" level="trace" additivity="false">
        <appender-ref ref="NEPAppender" />
    </logger>
    <logger name="edu.kit.datamanager.security.filter" level="trace" additivity="false">
        <appender-ref ref="rollingFile" />
    </logger>
    <!-- LOG this only for debugging - >
    <logger name="org.springframework.security.web" level="trace" additivity="false">
        <appender-ref ref="rollingFile" />
    </logger>
    <!- - End of debugging security. -->

</configuration>
